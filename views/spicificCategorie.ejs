<%- include('./partials/head'); %>

<main>
  <h1><%- title %></h1>
  <p class="subheader">Choose a recipe</p>

  <section class="categorie-container spicific-categorie">
    <% data.meals.forEach(function(meal) { %>
    <a class="meal-button" href="/meal/<%- meal.idMeal %>">
      <img class="meal-tumb" src="<%- meal.strMealThumb %>" />
      <p><%- meal.strMeal %></p></a
    >
    <% }) %>
  </section>
</main>
<%- include('./partials/footer'); %>
